@model IEnumerable<Seaboard.Intranet.Domain.NetProtocolMem>
<table class="table table-striped table-bordered table-hover informationTable" id="invoiceTable">
    <thead>
        <tr>
            <th style="width: 10%;">Codigo</th>
            <th style="width: 17%;">Facturacion TCC</th>
            <th style="width: 13%;">Emision TCC</th>
            <th style="width: 10%;">Fact-TCC</th>
            <th style="width: 15%;">Monto MEM-TCC</th>
            <th style="width: 25%;">Saldo RD$</th>
            <th style="width: 10%;">Estatus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerNumber</td>
                <td>@item.CustomerExternalNumber</td>
                <td>@item.InvoiceAmount.ToString("N2")</td>
                <td>@item.InvoiceNumber</td>
                <td>@item.DebtAmount.ToString("N2")</td>
                <td>@item.NetAmount.ToString("N2")</td>
                <td>@Html.EnumDropDownListFor(m => item.Status)</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#ResolutionNumber').val('@(Model.FirstOrDefault()?.ResolutionNumber ?? "")');
        $('#DueDate').val('@((Model.FirstOrDefault()?.DueDate ?? DateTime.Now).ToString("MM/dd/yyyy"))');
    });
</script>