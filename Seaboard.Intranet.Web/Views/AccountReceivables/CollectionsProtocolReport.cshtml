@{
    Layout = "~/Views/Shared/_BillingLayout.cshtml";
    ViewBag.Title = "Reporte Collections Protocol";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Reporte Collections Protocol</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="active">
                <strong>Reporte Collections Protocol </strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h3>Reporte Collections Protocol</h3>
                        </div>
                        <div class="ibox-content">
                            <div class="col-sm-12 col-sm-offset-1">
                                <button class="btn btn-success" type="button" data-toggle="modal" data-target="#modal-Print"><i class="fa fa-print"></i> Imprimir</button>
                                <br />
                            </div>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox">
                <div class="ibox-content">
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Fecha desde:</label>
                                        <div class="col-sm-4 input-group">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input id="FromDate" name="FromDate" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Fecha hasta:</label>
                                        <div class="col-sm-4 input-group">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input id="ToDate" name="ToDate" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Tasa de cambio:</label>
                                        <div class="col-sm-4 input-group">
                                            <span class="input-group-addon"><i class="fa fa-money"></i></span>
                                            <input type="text" name="exchangeRate" id="exchangeRate" class="form-control" value="1.0000" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="row">
                                <label>Insertar monto cierre de periodo en base a total de reporte</label>
                                <br />
                                <br />
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Mes periodo:</label>
                                        <div class="col-sm-4 input-group">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input id="MonthDate" name="MonthDate" class="form-control" />
                                        </div>
                                        <div class="col-sm-4 input-group">
                                            <button class="btn btn-success" onclick="cerrarPeriodo();">Procesar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modal-Print" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Imprimir</h4>
                </div>

                <div class="modal-body">
                    <p>Imprimir reporte</p>
                    <div class="form-group">
                        <label>Opción</label>
                        <select class="form-control" id="printOption" name="printOption">
                            <option value="10">PDF</option>
                            <option value="20">Excel</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-primary" onclick="imprimirReporte();"> Imprimir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/awesomeCheckboxStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")
    @Scripts.Render("~/plugins/sweetAlert")

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
            $('#FromDate').datepicker({
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                dateFormat: 'MM yy',
                onClose: function (dateText, inst) {
                    $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, 1));
                }
            });
            $('#FromDate').datepicker().datepicker("setDate", new Date());

            $('#ToDate').datepicker({
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                dateFormat: 'MM yy',
                onClose: function (dateText, inst) {
                    $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, 1));
                }
            });
            $('#ToDate').datepicker().datepicker("setDate", new Date());

            $('#MonthDate').datepicker({
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                format: 'mm/yyyy',
                onClose: function (dateText, inst) {
                    $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, 1));
                }
            });
            $('#MonthDate').datepicker().datepicker("setDate", new Date());
        });
        function imprimirReporte() {
            var data = {
                fromdate: $('#FromDate').datepicker('getDate'),
                todate: $('#ToDate').datepicker('getDate'),
                exchangeRate: $('#exchangeRate').val(),
                period: $('#MonthDate').datepicker('getDate'),
                printOption: parseInt($('#printOption').val())
            };

            var reportName = 'CollectionsProtocolReport';
            if ($('#printOption').val() === '10')
                reportName += '.pdf';
            else
                reportName += '.xls';
            var url = '@Url.Content("~/PDF/Reportes/")' + reportName;

            toastr.info('Estamos procesando su solicitud', 'Por favor espere');
            $.ajax({
                url: '@Url.Action("CollectionsProtocolReport", "AccountReceivables")',
                type: "POST",
                data: JSON.stringify(data),
                dataType: "JSON",
                async: false,
                cache: false,
                contentType: "application/json",
                success: function (d) {
                    if (d.status === "OK") {
                        window.open(url);
                    }
                    else {
                        alert(d.status);
                    }
                }
            });
        }
        function cerrarPeriodo() {
            var data = {
                monthDate: '01/' + $('#MonthDate').datepicker({ dateFormat: 'ddMMyyyy' }).val(),
                fromdate: $('#FromDate').datepicker('getDate'),
                todate: $('#ToDate').datepicker('getDate'),
                exchangeRate: $('#exchangeRate').val()
            };
            swal({
                title: "Procesar",
                text: "Quiere procesar el cierre de este periodo con los montos visualizados en el reporte de Collections ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, proceder!",
                cancelButtonText: "No, cancelar!",
                closeOnConfirm: true
            }, function (confirm) {
                if (confirm) {
                    $.ajax({
                        url: '@Url.Action("CloseCollectionsPeriod", "AccountReceivables")',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        async: false,
                        cache: false,
                        contentType: "application/json",
                        success: function (d) {
                            if (d.status === "OK") {
                                toastr.info('El periodo se ha cerrado correctamente', 'Cierre');
                            }
                            else {
                                alert(d.status);
                            }
                        }
                    });
                }
            });
        }
    </script>
}