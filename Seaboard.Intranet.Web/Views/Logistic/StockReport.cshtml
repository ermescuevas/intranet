@model Seaboard.Intranet.Domain.Models.PurchaseRequest

@{
    ViewBag.Title = "Reporte de stock de inventario";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Reporte de stock de inventario</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="active">
                <strong>Reporte de stock de inventario</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h3>Reporte de stock de inventario</h3>
                        </div>
                        <div class="ibox-content">
                                <div class="col-sm-12 col-sm-offset-1">
                                    <button class="btn btn-success" type="button" onclick="imprimirReporte();"><i class="fa fa-print"></i> Imprimir</button>
                                    <br />
                                </div>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox">
                <div class="ibox-content">
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Fecha de corte:</label>
                            <div class="col-sm-3 input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input id="Date" name="Date" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Incluir:</label>

                            <div class="col-sm-10">
                                <label class="checkbox-inline i-checks"> <input type="checkbox" name="zeroQuantity">  Cantidades en cero </label>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Intervalos</label>

                            <div class="col-sm-3">
                                <select class="form-control m-b" name="filterSelect" id="filterSelect">
                                    <option>Id. de articulo</option>
                                    <option>Clase de articulo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Desde:</label>
                            <div class="col-sm-2 input-group">
                                <input type="text" name="filterFrom" id="filterFrom" class="form-control" />
                                <span class="input-group-btn">
                                    <button id="lookupDesde" type="button" onclick="filtroDesde();" class="btn btn-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>

                            <br />

                            <label class="col-sm-2 control-label">Hasta:</label>
                            <div class="col-sm-2 input-group">
                                <input type="text" name="filterTo" id="filterTo" class="form-control" />
                                <span class="input-group-btn">
                                    <button id="lookupHasta" type="button" onclick="filtroHasta();" class="btn btn-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
   @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
   @Styles.Render("~/plugins/dataPickerStyles")
   <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/plugins/toastrStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('#Date').datepicker({
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                dateFormat: 'MM yy',
                onClose: function (dateText, inst) {
                    $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, 1));
                }
            });
            $('#Date').datepicker().datepicker("setDate", new Date());
        });

        function imprimirReporte() {
            var isAllValid = true;
            var zeroQuantity = false;
            if ($('input[name="zeroQuantity"]').is(":checked")) {
                zeroQuantity = true;
            }

            if (isAllValid) {
                var data = {
                    filterFrom: $('#filterFrom').val().trim(),
                    filterTo: $('#filterTo').val().trim(),
                    zeroQuantity: zeroQuantity,
                    typeFilter: $('#filterSelect').prop("selectedIndex"),
                    Date: $('#Date').datepicker('getDate')
                }

                var url = '@Url.Content("~/PDF/Reportes/")Stock.pdf';
                toastr.info('Estamos procesando su solicitud', 'Por favor espere')
                $.ajax({
                    url: '@Url.Action("PrintStockReport", "Logistic")',
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "JSON",
                    contentType: "application/json",
                    success: function (d) {
                        if (d.status == "OK") {
                            window.open(url);
                            window.location.href = "@Url.Action("StockReport", "Logistic")";
                        }
                        else {
                            alert(d.status);
                        }
                    }
                });
            }
        }

        function filtroDesde() {
            if ($('#filterSelect').prop("selectedIndex") == 0) {
                $('#lookupDesde').lookupbox({
                    title: 'Busqueda:',
                    url: '@Url.Action("ListLookup", "Home")?tipo=0&consulta=',
                    imgLoader: '<img src="~/Images/ajaxloader.gif">',
                    width: 800,
                    height: 1000,
                    onItemSelected: function (data) {
                        $('input[name=filterFrom]').val(data.ItemId);
                    },
                    tableHeader: ['Id. de articulo', 'Descripción', 'Categoria'],
                    hiddenFields: ['UnitId', 'Warehouse', 'Quantity']
                });
            } else {
                $('#lookupDesde').lookupbox({
                    title: 'Busqueda:',
                    url: '@Url.Action("ListLookup", "Home")?tipo=22&consulta=',
                    imgLoader: '<img src="~/Images/ajaxloader.gif">',
                    width: 800,
                    height: 1000,
                    onItemSelected: function (data) {
                        $('input[name=filterFrom]').val(data.Id);
                    },
                    tableHeader: ['Id. de clase', 'Descripción'],
                    hiddenFields: ['DataExtended']
                });
            }
        }

        function filtroHasta() {
            if ($('#filterSelect').prop("selectedIndex") == 0) {
                $('#lookupHasta').lookupbox({
                    title: 'Busqueda:',
                    url: '@Url.Action("ListLookup", "Home")?tipo=0&consulta=',
                    imgLoader: '<img src="~/Images/ajaxloader.gif">',
                    width: 800,
                    height: 1000,
                    onItemSelected: function (data) {
                        $('input[name=filterTo]').val(data.ItemId);
                    },
                    tableHeader: ['Id. de articulo', 'Descripción', 'Categoria'],
                    hiddenFields: ['UnitId', 'Warehouse', 'Quantity']
                });
            } else {
                $('#lookupHasta').lookupbox({
                    title: 'Busqueda:',
                    url: '@Url.Action("ListLookup", "Home")?tipo=22&consulta=',
                    imgLoader: '<img src="~/Images/ajaxloader.gif">',
                    width: 800,
                    height: 1000,
                    onItemSelected: function (data) {
                        $('input[name=filterTo]').val(data.Id);
                    },
                    tableHeader: ['Id. de clase', 'Descripción'],
                    hiddenFields: ['DataExtended']
                });
            }
        }
    </script>
}
