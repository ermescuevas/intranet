                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:  ",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    }
                },
                oAria: {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            });
            if ($('#BatchDescription').val().trim() !== '') {
                $('#getFileButton').hide();
                generateHeader();
                $('#BatchNumber').prop('readonly', true);
            }
            $('.ladda-button').ladda();
            $('#ResolutionNumber').focusout(function () {
                $('#Note').val('El total facturado se corresponde con los valores aprobados por el Consejo de Coordinación del OC-SENI en la resolución ' + $('#ResolutionNumber').val() +
                    ' según Transacciones Económicas de ' + parseDescription(parseInt($('#BillingMonth').val().substr(0, 2))) + ' ' + $('#BillingMonth').val().substr(3, 4) + ', la cual anexamos.')
            });

            $('#BillingMonth').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                format: 'mm/yyyy',
                minDate: new Date(@lastDate.Year, @lastDate.Month - 1, @lastDate.Day)
            });
            $('#DocumentDate').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                minDate: new Date(@lastDate.Year, @lastDate.Month - 1, @lastDate.Day)
            });
            $('#DueDate').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                minDate: new Date(@lastDate.Year, @lastDate.Month - 1, @lastDate.Day)
            });
        });

        function parseDescription(month) {
            switch (month) {
                case 1:
                    return "enero";
                case 2:
                    return "febrero";
                case 3:
                    return "marzo";
                case 4:
                    return "abril";
                case 5:
                    return "mayo";
                case 6:
                    return "junio";
                case 7:
                    return "julio";
                case 8:
                    return "agosto";
                case 9:
                    return "septiembre";
                case 10:
                    return "octubre";
                case 11:
                    return "noviembre";
                case 12:
                    return "diciembre";
                default:
                    return "enero";
            }
        }

        function assignCustomerStep() {
            $('#questions').hide();
            $('#createCustomer').hide();
            $('#customerCreated').hide();
            $('#assignCustomer').fadeIn();
            $.ajax({
                url: '@Url.Action("ListLookup", "Home")?tipo=30&consulta=',
                data: "",
                dataType: "JSON",
                contentType: "application/json",
                success: function (result) {
                    $('#CustomerId').empty()
                    $.each(result, function (i, val) {
                        $('#CustomerId').append($("<option />").val(val.Id).text(val.Id + ' - ' + val.Descripción));
                    });
                    $('select[name=CustomerId]').selectpicker('refresh');
                }
            });
        }

        function createCustomerStep() {
            $('#questions').hide();
            $('#assignCustomer').hide();
            $('#customerCreated').hide();
            $('#createCustomer').fadeIn();
        }

        function customerCreatedStep() {
            $('#questions').hide();
            $('#assignCustomer').hide();
            $('#createCustomer').hide();
            $('#customerCreated').fadeIn();
        }

        function createCustomerForm(code) {
            $('#newCustomer').val(code);
            $('#CustomerOC').val(code);
            $('#modal-CreateCustomer').modal('show');
            $('#assignCustomer').hide();
            $('#createCustomer').hide();
            $('#customerCreated').hide();
            $('#questions').fadeIn();
        }

        function createCustomer() {
            window.open("@Url.Action("CustomerCreate","Billing")", "_blank");
            customerCreatedStep();
        }

        function assignCustomer() {
            var isAllValid = true;
            if ($('#CustomerId').val() === '') {
                toastr.error('Por favor debe de especificar un cliente para procesar', 'Campos requeridos')
                isAllValid = false;
            }

            if ($('#CustomerOC').val() === '') {
                toastr.error('Por favor debe de un nombre de cliente de OC para procesar', 'Campos requeridos')
                isAllValid = false;
            }

            if (isAllValid) {
                var data = {
                    CustomerId: $('#CustomerId').val().trim(),
                    CustomerExternalId: $('#CustomerOC').val().trim(),
                    CustomerName: '',
                    CustomerClass: ''
                }
                $.ajax({
                    url: '@Url.Action("SaveCustomerConfiguration", "Billing")',
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "JSON",
                    contentType: "application/json",
                    success: function (result) {
                        if (result.status === "OK") {
                            data = {
                                customerId: $('#CustomerId').val().trim(),
                                customerExternalId: $('#CustomerOC').val().trim(),
                                billingMonth: '01/' + $('#BillingMonth').datepicker({ dateFormat: 'ddMMyyyy' }).val()
                            }
                            $.ajax({
                                url: '@Url.Action("UpdateCustomerId", "Billing")',
                                type: "POST",
                                data: JSON.stringify(data),
                                dataType: "JSON",
                                contentType: "application/json",
                                success: function (result) {
                                    if (result.status === "OK") {
                                        $('#modal-CreateCustomer').modal('hide');
                                        generateHeader();
                                    }
                                    else {
                                        swal({
                                            title: "ERROR",
                                            text: result.status,
                                            type: "error"
                                        });
                                    }
                                }
                            });
                        }
                        else {
                            swal({
                                title: "ERROR",
                                text: result.status,
                                type: "error"
                            });
                        }
                    }
                });
            }
        }

        function getTransactionFile() {
            toastr.info('Procesando el archivo, por favor espere', 'Proceso');
            $('#getFileButton').ladda('start');
            var formdata = new FormData($('#form-')[0]);
            $.ajax({
                url: '@Url.Action("GetMemBillingTransactionFile", "Billing")?mes=01/' + $('#BillingMonth').datepicker({ dateFormat: 'ddMMyyyy' }).val(),
                type: 'POST',
                data: formdata,
                cache: false,
                processData: false,
                contentType: false,
                success: function (result) {
                    if (result.status === "OK") {
                        $('#getFileButton').ladda('stop');
                        var $table = $('<table  class="table table-stripped"/>');
                        var thead = '<thead>' +
                            '<tr>' +
                            '<th style="width:10%">Excluir</th>' +
                            '<th style="width:25%">Id. de cliente</th>' +
                            '<th style="width:25%">Id. de cliente OC</th>' +
                            '<th style="width:40%">Total facturación</th>' +
