@using Seaboard.Intranet.Domain
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewBag.Title = "Reporte de datos de empleados";
}

<style>
    .glyphicon.fa {
        font-family: 'Glyphicons Halflings';
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Reporte de datos de empleados</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "HumanResources")">Inicio</a>
            </li>
            <li class="active">
                <strong>Reporte de datos de empleados</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h3>Reporte de datos de empleados</h3>
                        </div>
                        <div class="ibox-content">
                            <div class="col-sm-12 col-sm-offset-1">
                                <button class="btn btn-primary" type="button" onclick="imprimir();"><i class="fa fa-search"></i> Imprimir</button>
                                <button class="btn btn-info" type="button" onclick="borrar();"><i class="fa fa-eraser"></i> Borrar</button>
                                <br />
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Empleado:</label>
                                <div class="col-sm-12 input-group">
                                    <input type="text" name="EmployeeIdFrom" id="EmployeeIdFrom" class="form-control" placeholder="Desde" />
                                    <span class="input-group-btn">
                                        <button id="lookupEmpleadoDesde" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                    <input type="text" name="EmployeeIdTo" id="EmployeeIdTo" class="form-control" placeholder="Hasta" />
                                    <span class="input-group-btn">
                                        <button id="lookupEmpleadoHasta" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Departamento:</label>
                                <div class="col-sm-12 input-group">
                                    <input type="text" name="DepartmentIdFrom" id="DepartmentIdFrom" class="form-control" placeholder="Desde" />
                                    <span class="input-group-btn">
                                        <button id="lookupDepartamentoDesde" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                    <input type="text" name="DepartmentIdTo" id="DepartmentIdTo" class="form-control" placeholder="Hasta" />
                                    <span class="input-group-btn">
                                        <button id="lookupDepartamentoHasta" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Cargo:</label>
                                <div class="col-sm-12 input-group">
                                    <input type="text" name="PositionIdFrom" id="PositionIdFrom" class="form-control" placeholder="Desde" />
                                    <span class="input-group-btn">
                                        <button id="lookupPosicionDesde" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                    <input type="text" name="PositionIdTo" id="PositionIdTo" class="form-control" placeholder="Hasta" />
                                    <span class="input-group-btn">
                                        <button id="lookupPosicionHasta" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Supervisor:</label>
                                <div class="col-sm-12 input-group">
                                    <input type="text" name="SupervisorIdFrom" id="SupervisorIdFrom" class="form-control" placeholder="Desde" />
                                    <span class="input-group-btn">
                                        <button id="lookupSupervisorDesde" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                    <input type="text" name="SupervisorIdTo" id="SupervisorIdTo" class="form-control" placeholder="Hasta" />
                                    <span class="input-group-btn">
                                        <button id="lookupSupervisorHasta" type="button" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fecha de entrada:</label>
                                <div class="col-sm-12 input-group">
                                    <input type="text" name="daterange" id="daterange" class="form-control" autocomplete="off" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/plugins/dateRangeStyles")
    <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/sweetAlert")

<script>
        var date;
        var details = [];
        $(document).ready(function () {
            $.formattedDate = function (dateToFormat) {
                var dateObject = new Date(dateToFormat);
                var day = dateObject.getDate();
                var month = dateObject.getMonth() + 1;
                var year = dateObject.getFullYear();
                day = day < 10 ? "0" + day : day;
                month = month < 10 ? "0" + month : month;
                var formattedDate = month + "/" + day + "/" + year;
                return formattedDate;
            };
            $('.informationTable').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                language: {
                    "sProcessing": "Procesando... ",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo":
                        "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros ",
                    "sInfoEmpty":
                        "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered":
                        "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:  ",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    }
                },
                oAria: {
                    "sSortAscending":
                        ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending":
                        ": Activar para ordenar la columna de manera descendente"
                },
                buttons: [
                    { extend: 'excel', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
            $("#lookupEmpleadoDesde").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=18&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=EmployeeIdFrom]').val(data.EmployeeId);
                    $('input[name=EmployeeIdTo]').val(data.EmployeeId);
                },
                tableHeader: ['Id. de empleado', 'Nombre', 'Departamento'],
                hiddenFields: ['FirstName', 'LastName', 'Identification', 'JobTitle', 'Email', 'LastName']
            });
            $("#lookupEmpleadoHasta").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=18&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=EmployeeIdTo]').val(data.EmployeeId);
                },
                tableHeader: ['Id. de empleado', 'Nombre', 'Departamento'],
                hiddenFields: ['FirstName', 'LastName', 'Identification', 'JobTitle', 'Email', 'LastName']
            });
            $("#lookupSupervisorDesde").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=52&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=SupervisorIdFrom]').val(data.Id);
                    $('input[name=SupervisorIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de supervisor', 'Descripción', 'Empleado'],
                hiddenFields: ['DataPlus']
            });
            $("#lookupSupervisorHasta").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=52&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=SupervisorIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de grupo', 'Descripción'],
                hiddenFields: ['DataExtended', 'DataPlus']
            });
            $("#lookupPosicionDesde").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=51&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=PositionIdFrom]').val(data.Id);
                    $('input[name=PositionIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de cargo', 'Descripción'],
                hiddenFields: ['DataExtended', 'DataPlus']
            });
            $("#lookupPosicionHasta").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=51&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=PositionIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de cargo', 'Descripción'],
                hiddenFields: ['DataExtended', 'DataPlus']
            });
            $("#lookupDepartamentoDesde").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=48&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=DepartmentIdFrom]').val(data.Id);
                    $('input[name=DepartmentIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de departamento', 'Descripción'],
                hiddenFields: ['DataExtended', 'DataPlus']
            });
            $("#lookupDepartamentoHasta").lookupbox({
                title: 'Busqueda:',
                url: '@Url.Action("ListLookup", "Home")?tipo=48&consulta=',
                imgLoader: '<img src="~/Images/ajaxloader.gif">',
                width: 800,
                height: 1000,
                onItemSelected: function (data) {
                    $('input[name=DepartmentIdTo]').val(data.Id);
                },
                tableHeader: ['Id. de departamento', 'Descripción'],
                hiddenFields: ['DataExtended', 'DataPlus']
            });
            $('#daterange').daterangepicker({ format: 'DD/MM/YYYY', });
            $('#daterange').on('apply.daterangepicker', function (ev, picker) {
                date = picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY');
            });
            $('#daterange').on('cancel.daterangepicker', function (ev, picker) {
                $('#daterange').val('');
                date = '';
            });
        });
        function borrar() {
            $('#EmployeeIdFrom,#EmployeeIdTo,#PositionIdFrom,#PositionIdTo,#SupervisorIdFrom,#SupervisorIdTo,#DepartmentIdFrom,#DepartmentIdTo').val('');
        }
        function imprimir() {
            var url = '@Url.Content("~/PDF/Reportes/")' + 'EmployeeDataReport.pdf';
            toastr.info('Estamos procesando su solicitud', 'Por favor espere');
            var data = {
                employeeFrom: $('#EmployeeIdFrom').val(),
                employeeTo: $('#EmployeeIdTo').val(),
                departmentFrom: $('#DepartmentIdFrom').val(),
                departmentTo: $('#DepartmentIdTo').val(),
                positionFrom: $('#GroupIdFrom').val(),
                positionTo: $('#GroupIdTo').val(),
                supervisorFrom: $('#SupervisorIdFrom').val(),
                supervisorTo: $('#SupervisorIdTo').val(),
                dateRange: date
            }
            $.ajax({
                url: '@Url.Action("EmployeeDataReport", "HumanResources")',
                type: "POST",
                data: JSON.stringify(data),
                dataType: "JSON",
                async: false,
                cache: false,
                contentType: "application/json",
                success: function (d) {
                    if (d.status === "OK")
                        window.open(url);
                    else
                        swal({
                            title: "ERROR",
                            text: d.status,
                            type: "error"
                        });
                }
            });
        }
</script>
}