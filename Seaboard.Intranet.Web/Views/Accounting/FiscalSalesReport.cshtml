@{
    Layout = "~/Views/Shared/_AccountingLayout.cshtml";
    ViewBag.Title = "Reporte 607";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Reporte 607</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Accounting")">Inicio</a>
            </li>
            <li class="active">
                <strong>Reporte 607</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h3>Reporte 607</h3>
                        </div>
                        <div class="ibox-content">
                            <div class="col-sm-12 col-sm-offset-1">
                                <button class="btn btn-primary" type="button" onclick="exportar();"><i class="fa fa-file-excel-o"></i> Planilla DGII</button>
                                <button class="btn btn-success" type="button" onclick="consultar();"><i class="fa fa-search"></i> Consultar</button>
                                <button class="btn btn-info" type="button" onclick="borrar();"><i class="fa fa-eraser"></i> Borrar</button>
                                <br />
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox">
                <div class="ibox-content">
                    <div class="hr-line-dashed"></div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Periodo:</label>
                                    <div class="col-sm-7 input-group">
                                        <div class="col-sm-12 input-group">
                                            <select id="periodDrop" name="periodDrop" data-placeholder="Seleccione un periodo..." class="chosen-select" tabindex="2">
                                                <option value="">Seleccione un periodo</option>
                                                @for (int i = 0; i < 30; i++)
                                                {
                                                    <option value="@DateTime.Now.AddMonths(i * -1).ToString("yyyy-MM")">@DateTime.Now.AddMonths(i * -1).ToString("yyyyMM")</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Fecha desde:</label>
                                    <div class="col-sm-7 input-group">
                                        <div class="col-sm-12 input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" id="fromDate" name="fromDate" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Fecha hasta:</label>
                                    <div class="col-sm-7 input-group">
                                        <div class="col-sm-12 input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" id="toDate" name="toDate" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="hr-line-dashed"></div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Imprimir moneda en:</label>
                                    <div class="col-sm-6 ">
                                        <div class="radio radio-info radio-inline">
                                            <input type="radio" id="functionalRb" value="0" name="printCurrency" checked="">
                                            <label for="functionalRb"> Pesos </label>
                                        </div>
                                        <div class="radio radio-inline">
                                            <input type="radio" id="reportRb" value="1" name="printCurrency">
                                            <label for="reportRb"> Dólares </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Tasa de cambio:</label>
                                    <div class="col-sm-6 ">
                                        <input type="text" name="exchangeRate" id="exchangeRate" class="form-control" value="1.0000" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="table-responsive" id="invoiceRows">
                        <table class="table table-striped table-bordered table-hover informationTable">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">RNC</th>
                                    <th style="width: 10%;">NCF</th>
                                    <th style="width: 15%;">NCF modificado</th>
                                    <th style="width: 10%;">Tipo de ingreso</th>
                                    <th style="width: 10%;">Fecha NCF</th>
                                    <th style="width: 20%;">Monto facturado</th>
                                    <th style="width: 15%;">ITBIS facturado</th>
                                    <th style="width: 10%;">Monto retención</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/awesomeCheckboxStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")

}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/dataTables")

    <script>
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: "100%" });
            $('.informationTable').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                order: [[0, "desc"]],
                language: {
                    "sProcessing": "Procesando... ",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo":
                        "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros ",
                    "sInfoEmpty":
                        "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered":
                        "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:  ",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    }
                },
                oAria: {
                    "sSortAscending":
                        ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending":
                        ": Activar para ordenar la columna de manera descendente"
                },
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
            $('#periodDrop').on('change', function (e) {
                var date = new Date($(this).val() + '-01T10:20:30Z');
                var from = new Date(date.getFullYear(), date.getMonth(), 1);
                var to = new Date(date.getFullYear(), date.getMonth() + 1, 0);
                $('#fromDate').datepicker('setDate', from);
                $('#toDate').datepicker('setDate', to);
            });
            $.formattedDate = function (dateToFormat) {
                var dateObject = new Date(dateToFormat);
                var day = dateObject.getDate();
                var month = dateObject.getMonth() + 1;
                var year = dateObject.getFullYear();
                day = day < 10 ? "0" + day : day;
                month = month < 10 ? "0" + month : month;
                var formattedDate = month + "/" + day + "/" + year;
                return formattedDate;
            };
        });

        function consultar() {
            var printCurrency = 1;
            var isAllValid = true;

            if ($('#fromDate').val() === '') {
                toastr.error("Debe de especificar una fecha desde para continuar");
                isAllValid = false;
            }
            if ($('#toDate').val() === '') {
                toastr.error("Debe de especificar una fecha desde para continuar");
                isAllValid = false;
            }
            if (isAllValid) {
                if ($('#reportRb').is(":checked")) {
                    printCurrency = 0;
                }
                var data = {
                    fromDate: $('#fromDate').datepicker('getDate'),
                    toDate: $('#toDate').datepicker('getDate'),
                    exchangeRate: parseFloat($("#exchangeRate").val()),
                    printCurrency: printCurrency
                };

                toastr.info('Estamos procesando su solicitud', 'Por favor espere');
                $.ajax({
                    url: '@Url.Action("FiscalSalesReport", "Billing")',
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "JSON",
                    async: false,
                    cache: false,
                    contentType: "application/json",
                    success: function (d) {
                        if (d.status === "OK") {
                            var $table = $(' <table class="table table-striped table-bordered table-hover informationTable">');
                            $table.append(
                                '<thead>' +
                                '<tr>' +
                                '<th style="width: 9%;">RNC</th>' +
                                '<th style="width: 9%;">NCF</th>' +
                                '<th style="width: 10%;">NCF modificado</th>' +
                                '<th style="width: 24%;">Tipo de ingreso</th>' +
                                '<th style="width: 10%;">Fecha NCF</th>' +
                                '<th style="width: 15%;">Monto facturado</th>' +
                                '<th style="width: 12%;">ITBIS facturado</th>' +
                                '<th style="width: 11%;">Monto retención</th>' +
                                '</tr>' +
                                '</thead>');
                            if (d.registros.length > 0) {
                                var $tbody = $('<tbody/>');
                                $.each(d.registros, function (i, val) {
                                    var $row = $('<tr/>');
                                    $row.append($('<td/>').html(val.Rnc));
                                    $row.append($('<td/>').html(val.Ncf));
                                    $row.append($('<td/>').html(val.ApplyNcf));
                                    $row.append($('<td/>').html(val.IncomeType));
                                    $row.append($('<td/>').html($.formattedDate(new Date(parseInt(val.DocumentDate.substr(6))))));
                                    $row.append($('<td/>').html(parseFloat(val.DocumentAmount).toFixed(2).replace(/./g, function (c, i, a) {
                                        return i && c !== "." && ((a.length - i) % 3 === 0) ? ',' + c : c;
                                    })));
                                    $row.append($('<td/>').html(parseFloat(val.TaxAmount).toFixed(2).replace(/./g, function (c, i, a) {
                                        return i && c !== "." && ((a.length - i) % 3 === 0) ? ',' + c : c;
                                    })));
                                    $row.append($('<td/>').html(parseFloat(val.WithholdTax).toFixed(2).replace(/./g, function (c, i, a) {
                                        return i && c !== "." && ((a.length - i) % 3 === 0) ? ',' + c : c;
                                    })));
                                    $tbody.append($row);
                                });
                                $table.append($tbody);
                            }
                            $('#invoiceRows').html($table);
                            $($table).DataTable({
                                pageLength: 10,
                                order: [[0, "desc"]],
                                dom: '<"html5buttons"B>lTfgitp',
                                language: {
                                    "sProcessing": "Procesando... ",
                                    "sLengthMenu": "Mostrar _MENU_ registros",
                                    "sZeroRecords": "No se encontraron resultados",
                                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros ",
                                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                                    "sInfoPostFix": "",
                                    "sSearch": "Buscar:  ",
                                    "sUrl": "",
                                    "sInfoThousands": ",",
                                    "sLoadingRecords": "Cargando...",
                                    "oPaginate": {
                                        "sFirst": "Primero",
                                        "sLast": "Último",
                                        "sNext": "Siguiente",
                                        "sPrevious": "Anterior"
                                    }
                                },
                                oAria: {
                                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                                },
                                buttons: [
                                    { extend: 'copy' },
                                    { extend: 'csv' },
                                    { extend: 'excel', title: 'ExampleFile' },
                                    { extend: 'pdf', title: 'ExampleFile' },

                                    {
                                        extend: 'print',
                                        customize: function (win) {
                                            $(win.document.body).addClass('white-bg');
                                            $(win.document.body).css('font-size', '10px');

                                            $(win.document.body).find('table')
                                                .addClass('compact')
                                                .css('font-size', 'inherit');
                                        }
                                    }
                                ]
                            });
                        }
                        else {
                            alert(d.status);
                        }
                    }
                });
            }
        }

        function exportar() {
            var printCurrency = 1;
            var isAllValid = true;

            if ($('#fromDate').val() === '') {
                toastr.error("Debe de especificar una fecha desde para continuar");
                isAllValid = false;
            }
            if ($('#toDate').val() === '') {
                toastr.error("Debe de especificar una fecha desde para continuar");
                isAllValid = false;
            }
            if (isAllValid) {
                if ($('#reportRb').is(":checked")) {
                    printCurrency = 0;
                }
                toastr.info('Estamos procesando su solicitud', 'Por favor espere');
                var data = {
                    fromDate: $('#fromDate').datepicker('getDate'),
                    toDate: $('#toDate').datepicker('getDate'),
                    exchangeRate: parseFloat($("#exchangeRate").val()),
                    printCurrency: printCurrency,
                    period: $('#periodDrop').val()
                };

                toastr.info('Estamos procesando su solicitud', 'Por favor espere');
                $.ajax({
                    url: '@Url.Action("ExportFiscalSalesReport", "Accounting")',
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "JSON",
                    async: false,
                    cache: false,
                    contentType: "application/json",
                    success: function (d) {
                        if (d.status === "OK") {
                            window.location = '@Url.Action("Download", "Accounting")';
                        }
                    }
                });
                
            }
        }

        function borrar() {
            $('#filterFrom,#filterTo').val('');
        }
    </script>
}