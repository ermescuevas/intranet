@model Seaboard.Intranet.Domain.ViewModels.ArViewModel
@{
    ViewBag.Title = "Detalle de AR";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalle de AR</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li>
                <a href="@Url.Action("Inquiry", "Ar")">Consulta de AR</a>
            </li>
            <li class="active">
                <strong>Detalle de AR</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="m-b-md">
                                @*<a href="#" class="btn btn-white btn-xs pull-right">Edit project</a>*@
                                <h2>@Model.ArDescription</h2>
                            </div>
                            <dl class="dl-horizontal">
                                <dt>Estado:</dt>
                                <dd><span class="label label-primary">Activo</span></dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-5">
                            <dl class="dl-horizontal">
                                <dt>Creado por:</dt>
                                <dd>@Model.CreatedBy</dd>
                                <dt>Monto:</dt>
                                <dd>@Model.Amount.ToString("C2")</dd>
                                <dt>Id. de Proyecto:</dt>
                                <dd>@Model.ProjectId</dd>
                                <dt>Id. de AR:</dt>
                                <dd>@Model.ArNumber</dd>
                            </dl>
                        </div>

                        <div class="col-lg-7" id="cluster_info">
                            <dl class="dl-horizontal">
                                <dt>Ultima actualizacion:</dt>
                                <dd>@Model.ModifiedDate.ToLongDateString()</dd>
                                <dt>Fecha creación:</dt>
                                <dd>@Model.CreatedDate.ToLongDateString()</dd>
                                <dt>Departamento: </dt>
                                <dd>@Model.DepartmentId</dd>
                                <dt>Monto usado: </dt>
                                <dd>@Model.PurchaseList.Sum(m => m.Amount).ToString("C2")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <dl class="dl-horizontal">
                                <dt>Usado:</dt>
                                <dd>
                                    <div class="progress progress-striped active m-b-sm">
                                        <div style="width: 60%;" class="progress-bar"></div>
                                    </div>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab-1" data-toggle="tab">Actividad</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab-1">
                                            <table class="table table-striped text-center">
                                                <thead>
                                                    <tr class="text-center">
                                                        <th>Id. de requisicion</th>
                                                        <th>Orden de compra</th>
                                                        <th>Fecha requisicion</th>
                                                        <th>Fecha OC</th>
                                                        <th>Monto</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.PurchaseList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span class="label label-primary"><i class="fa fa-check"></i> @item.RequestId</span>
                                                            </td>
                                                            <td>
                                                                @if (item.PurchaseOrder.Trim().Length > 0)
                                                                {
                                                                    <span class="label label-success"><i class="fa fa-check"></i> @item.PurchaseOrder.Trim()</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @(item.RequestDocumentDate.ToString("yyyyMMdd") == "19000101" ? "" : item.RequestDocumentDate.ToShortDateString())
                                                            </td>
                                                            <td>
                                                                @(item.PurchaseDocumentDate.ToString("yyyyMMdd") == "19000101" ? "" : item.PurchaseDocumentDate.ToShortDateString())
                                                            </td>
                                                            <td>
                                                                <p class="small">
                                                                    @(item.Amount == 0 ? "" : item.Amount.ToString("C2"))
                                                                </p>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-2">
        <div class="wrapper wrapper-content project-manager">
        </div>
    </div>
</div>

