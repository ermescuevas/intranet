@{
    Seaboard.Intranet.Domain.ViewModels.PurchaseRequestAdditionalInfoViewModel info = ViewBag.AdditionalInformation;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Detalles de requisicion</h4>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1"> Detalles</a></li>
                    <li class=""><a data-toggle="tab" href="#tab-2"> Inf. add.</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id. de articulo</th>
                                        <th>Descripción</th>
                                        <th>Cantidad</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.RequestDetail != null)
                                    {
                                        foreach (Seaboard.Intranet.Domain.ViewModels.PurchaseRequestLineViewModel item in ViewBag.RequestDetail)
                                        {
                                            <tr>
                                                <td>@item.ItemId.Trim()</td>
                                                <td>@item.ItemDesc.Trim()</td>
                                                <td>@item.Quantity.ToString("N2")</td>
                                                <td>@item.Status.Trim()</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div id="tab-2" class="tab-pane">
                        <div class="panel-body">
                            <h4>Informacion adicional</h4>
                            @if (info != null)
                            {
                                <dl class="dl-horizontal">
                                    <dt>@Html.DisplayName("Descripción")</dt>
                                    <dd>@info.Description.Trim()</dd>
                                    <dt>@Html.DisplayName("Fecha requerida")</dt>
                                    <dd>@info.RequiredDate.ToString("dd/MM/yyyy")</dd>
                                    <dt>@Html.DisplayName("Fecha documento")</dt>
                                    <dd>@info.DocumentDate.ToString("dd/MM/yyyy")</dd>
                                    <dt>@Html.DisplayName("Departamento")</dt>
                                    <dd>@info.Department.Trim()</dd>
                                    <dt>@Html.DisplayName("Solicitante")</dt>
                                    <dd>@info.Requester.Trim()</dd>
                                    <dt>@Html.DisplayName("Aprobador")</dt>
                                    <dd>@info.Aprover.Trim()</dd>
                                </dl>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cerrar</button>
</div>