@model Seaboard.Intranet.Domain.ViewModels.Lookup
@{
    ViewBag.Title = "Asignación de clases de inventario";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Asignación de clases de inventario</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="active">
                <strong>Asignación de clases de inventario</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>Asignación de clases de inventario</h3>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <div class="col-sm-12 col-sm-offset-1">
                            <button class="btn btn-primary" type="button" onclick="guardar();"><i class="fa fa-save"></i> Guardar</button>
                            <button class="btn btn-white" type="button" onclick="limpiarCampos();"><i class="fa fa-eraser"></i> Borrar</button>
                            <button class="btn btn-danger" type="button" id="lookupCuenta"><i class="fa fa-bars"></i> Asignar Masivamente</button>
                            <button class="btn btn-info" type="button" id="copyRequest"><i class="fa fa-copy"></i> Copiar</button>
                            <br />
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1"> Datos Basicos</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <div class="row">
                                <fieldset class="form-horizontal">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="col-sm-4 control-label">Id de departamento:</label>
                                                <div class="col-sm-8 input-group">
                                                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "" })
                                                    <span class="input-group-btn">
                                                        <button id="lookupDepartamento" type="button" class="btn btn-primary">
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="col-sm-4 control-label">Descripción:</label>
                                                <div class="col-sm-8 input-group">
                                                    @Html.TextBoxFor(m => m.Descripción, new { @class = "form-control", @readonly = "" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="hr-line-dashed"></div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-8 text-center">
                                            <div class="table-responsive" id="accountRows">


                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/toastrStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")


    <script type="text/javascript">
        var accountItems = [];

        $("#lookupDepartamento").lookupbox({
            title: 'Busqueda: ',
            url: '@Url.Action("ListLookup", "Home")?tipo=24&consulta=',
            imgLoader: '<img src="~/Images/ajaxloader.gif">',
            width: 800,
            height: 1000,
            onItemSelected: function (data) {
                $('input[name=Id]').val(data.Id);
                $('input[name=Descripción]').val(data.Descripción);
                buscarLineas()
            },
            tableHeader: ['Id. de departamento', 'Descripción'],
            hiddenFields: ['DataExtended']
        });

        $("#lookupCuenta").lookupbox({
            title: 'Busqueda: ',
            url: '@Url.Action("ListLookup", "Home")?tipo=25&consulta=',
            imgLoader: '<img src="~/Images/ajaxloader.gif">',
            width: 800,
            height: 1000,
            onItemSelected: function (data) {
                if (confirm("Esta seguro que desea asignar esta cuenta a todas las clases de inventario?")) {
                    asignarMasivamente(data.Id);
                }
            },
            tableHeader: ['Numero de cuenta', 'Descripción', 'Alias']
        });

        $("#copyRequest").lookupbox({
            title: 'Busqueda:',
            url: '@Url.Action("ListLookup", "Home")?tipo=24&consulta=',
            imgLoader: '<img src="~/Images/ajaxloader.gif">',
            width: 800,
            height: 1000,
            onItemSelected: function (data) {
                if (confirm("Esto sobreescribira los datos existentes desea continuar?")) {
                    copiarDepartamento(data.Id);
                }
            },
            tableHeader: ['Id. de departamento', 'Descripción'],
            hiddenFields: ['DataExtended']
        });

        function limpiarCampos() {
            $('#Id').val('');
            $('#Descripción').val('');
            $('#accountRows').html('');
        }

        function copiarDepartamento(departamento) {
            $.ajax({
                url: '@Url.Action("CopyDepartments", "Logistic")?DepartmentId=' + departamento,
                type: "POST",
                data: "",
                dataType: "JSON",
                cache: false,
                contentType: "application/json",
                success: function (result) {
                    accountItems = result.status;
                    fillUsersTable();
                }
            });
        }

        function buscarLineas() {
            $.ajax({
                url: '@Url.Action("GetAccountDepartments", "Logistic")?DepartmentId=' + $('#Id').val().trim(),
                type: "POST",
                data: "",
                dataType: "JSON",
                cache: false,
                contentType: "application/json",
                success: function (result) {
                    accountItems = result.status;
                    fillUsersTable();
                }
            });
        }

        function asignarMasivamente(account) {
            $('#informationTable > tbody > tr').each(function () {
                var row = $(this);
                row.find('td:eq(2)').html(account);
            });
        }

        function setCellValue(tableId, rowId, colNum, newValue) {
            $('#' + tableId + ' tr:eq(' + (rowId + 1) + ') td:eq(' + (colNum - 1) + ')').html(newValue);
        }

        function fillUsersTable() {
            if (accountItems.length > 0) {
                var $table = $('<table class="table table-stripped table-bordered" id="informationTable" />');
                $table.append('<thead><tr><th>Id. de clase</th><th>Descripción</th><th>Numero de cuenta</th><th style="width:3%" class="text-center">#</th></tr></thead>');
                var $tbody = $('<tbody/>');
                $.each(accountItems, function (i, val) {
                    var $row = $('<tr/>');
                    var $button = $('<button name="lookupClase" type="button" class="btn btn-primary"><i class="fa fa-search"></i ></button>');
                    $button.lookupbox({
                        title: 'Busqueda: ',
                        url: '@Url.Action("ListLookup", "Home")?tipo=25&consulta=',
                        imgLoader: '<img src="~/Images/ajaxloader.gif">',
                        width: 800,
                        height: 1000,
                        onItemSelected: function (data) {
                            setCellValue("informationTable", i, 3, data.Id);
                        },
                        tableHeader: ['Numero de cuenta', 'Descripción', 'Alias']
                    });
                    $row.append($('<td/>').html(val.Id));
                    $row.append($('<td/>').html(val.Descripción));
                    $row.append($('<td/>').html(val.DataExtended));
                    $row.append($('<td/>').html($button));
                    $tbody.append($row);
                });

                $table.append($tbody);
                $('#accountRows').html($table);


            }
            else {
                $('#accountRows').html('');
            }
        }

        function guardar() {
            var isAllValid = true;
            var lines = [];
            if ($('#Id').val().trim().length == 0) {
                toastr.error('Debe de especificar un id de departamento', 'Campos requeridos')
                isAllValid = false;
            }

            if (isAllValid) {
                $('#informationTable > tbody > tr').each(function () {
                    var row = $(this);
                    lines.push({
                        Id: $('#Id').val().trim(),
                        Descripción: row.find('td:eq(0)').html().trim(),
                        DataExtended: row.find('td:eq(2)').html().trim()
                    });
                });
            }
            if (isAllValid) {
                console.log(lines);
                var data = {
                    Lines: lines
                }
                $.ajax({
                    url: '@Url.Action("SaveAccountDepartment", "Logistic")',
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "JSON",
                    contentType: "application/json",
                    success: function (d) {
                        if (d.status == "OK") {
                            alert('Datos insertados correctamente');
                        }
                        else {
                            alert(d.status);
                        }
                    }
                });
            }
        }
    </script>
}