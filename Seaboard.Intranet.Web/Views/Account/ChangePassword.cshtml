@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Requisiciones de caja chica";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cambiar contraseña</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="active">
                <strong>Cambiar contraseña</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="panel-body">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Id. de usuario</label>
                        <div class="col-sm-8 input-group">
                            <input type="text" id="UserId" name="UserId" readonly="readonly" value="@User.Identity.GetUserName()" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Contraseña actual:</label>
                        <div class="col-sm-8 input-group">
                            <input type="password" id="oldPassword" name="oldPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Nueva contraseña:</label>
                        <div class="col-sm-8 input-group">
                            <input type="password" id="newPassword" name="newPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Confirmar contraseña:</label>
                        <div class="col-sm-8 input-group">
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">&nbsp;</label>
                        <div class="col-sm-8 input-group">
                            <button class="btn btn-primary" type="button" onclick="procesarSolicitud();"><i class="fa fa-save"></i> Cambiar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <link href="@Url.Content("~/Content/plugins/lookupbox/lookupbox.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {
    @Scripts.Render("~/Scripts/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/Scripts/plugins/lookupbox/jquery.lookupbox.js")

    <script>
        var isAllValid = true;
        function getPassword() {
            $.ajax({
                url: '@Url.Action("VerifyPassword","Account")?oldPassword=' + $('#oldPassword').val().trim(),
                type: "POST",
                data: "",
                cache: false,
                dataType: "JSON",
                contentType: "application/json",
                success: function (result) {
                    if (result.status == false) {
                        toastr.error('La contraseña actual que digito no es valida', 'Campos requeridos');
                        isAllValid = false;
                    }
                }
            });
        }

        function procesarSolicitud() {
            isAllValid = true;
            if ($('#oldPassword').val().trim() == '') {
                toastr.error('Debe de especificar la contraseña actual', 'Campos requeridos')
                isAllValid = false;
            }

            if ($('#newPassword').val().trim() == '') {
                toastr.error('Debe de especificar una nueva contraseña', 'Campos requeridos')
                isAllValid = false;
            }
            else {
                if ($('#newPassword').val().trim().length < 6) {
                    toastr.error('La contraseña debe de tener minimo 6 carateres', 'Campos requeridos')
                    isAllValid = false;
                }
            }

            if ($('#confirmPassword').val().trim() == '') {
                toastr.error('Debe de especificar confirmar su contraseña', 'Campos requeridos')
                isAllValid = false;
            }
            else {
                if ($('#confirmPassword').val().trim().length < 6) {
                    toastr.error('La contraseña debe de tener minimo 6 carateres', 'Campos requeridos')
                    isAllValid = false;
                }
            }

            if (isAllValid) {
                getPassword();
            }

            if (isAllValid) {
                if ($('#newPassword').val().trim() != $('#confirmPassword').val().trim()) {
                    toastr.error('La contraseñas no coinciden', 'Campos requeridos')
                    isAllValid = false;
                }
            }

            if (isAllValid) {
                $.ajax({
                    url: '@Url.Action("ChangePass", "Account")?oldPassword=' + $('#oldPassword').val().trim() + '&NewPassword=' + $('#newPassword').val().trim(),
                    type: "POST",
                    data: "",
                    cache: false,
                    dataType: "JSON",
                    contentType: "application/json",
                    success: function (result) {
                        if (result.status == true) {
                            window.location.href = "@Url.Action("Index","Home")";
                        }
                    }
                });
            }
        }
    </script>
}

