@using Microsoft.AspNet.Identity;
<div id="modal-items" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Solicitud de articulo</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Descripción</label>
                            <div class="col-sm-12 input-group">
                                <div class="input-group m-b">
                                    <textarea id="ItemRequestDescription" onchange="getCharacterQty();" onkeyup="this.onchange();" onpaste="this.onchange();" oninput="this.onchange();" maxlength="100" name="ItemRequestDescription" class="form-control" rows="3"></textarea>
                                    <span class="input-group-addon"><p id="characterQty" name="characterQty"></p></span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <label>Solicitante</label>
                            <input type="text" class="form-control" readonly="readonly" value="@(Seaboard.Intranet.BusinessLogic.Account.GetAccount(User.Identity.GetUserName()) == null ? "" : Seaboard.Intranet.BusinessLogic.Account.GetAccount(User.Identity.GetUserName()).UserId)" id="ItemRequestRequester" name="ItemRequestRequester" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Comentario</label>
                            <textarea id="ItemRequestComment" name="ItemRequestComment" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-success" onclick="procesarSolicitudArticulo();"><i class=" fa fa-add "></i>  Guardar y enviar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function getCharacterQty() {
        var length = $('#ItemRequestDescription').val().length;
        $('#characterQty').html(length);
    }

    function procesarSolicitudArticulo() {
        var isAllValid = true;
        if ($('#ItemRequestDescription').val().trim() == '') {
            isAllValid = false;
        }

        if (isAllValid) {
            var data = {
                ItemRequestDescription: $('#ItemRequestDescription').val().trim(),
                ItemRequestComment: $('#ItemRequestComment').val().trim(),
            };

            $.ajax({
                url: '@Url.Action("SaveItemRequest", "Home")',
                type: "POST",
                data: JSON.stringify(data),
                cache: false,
                async: false,
                dataType: "JSON",
                contentType: "application/json",
                success: function (d) {
                    if (d.status == "OK") {
                        $('#ItemRequestDescription').val('');
                        $('#ItemRequestComment').val('');
                        $('#modal-items').modal('hide');
                    }
                    else {
                        alert(d.status);
                    }
                },
                error: function () {
                    alert('Error. Por favor trate de nuevo.');
                }
            });
        }
    }
</script>
